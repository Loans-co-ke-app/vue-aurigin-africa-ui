{
  "parser": "typescript",
  "printWidth": 80,
  "tabWidth": 4,
  "semi": true,
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "useTabs": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    },{
      "files":"*.vue",
      "options":{
        "parser":"vue"
      }
    },{
      "files":"*.css",
      "options":{
        "parser":"css"
      }
    }
  ]
}